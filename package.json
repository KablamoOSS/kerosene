{
  "name": "kerosene",
  "version": "1.0.0",
  "description": "A collection of useful modules",
  "main": "index.js",
  "repository": "https://github.com/KablamoOSS/kerosene",
  "author": "Kablamo",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "manypkg check",
    "prebuild": "yarn workspace @kablamo/kerosene run build",
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "lint": "eslint --ext=\".js,.jsx,.ts,.tsx\" .",
    "prettier:check": "prettier --check packages/**/*.ts packages/**/*.tsx",
    "test": "jest --expand --coverage",
    "test:coverage": "jest --coverage --coverageReporters=lcov --coverageDirectory=coverage",
    "watch": "jest --verbose=false --watch",
    "release": "yarn build && changeset publish"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./testSetup.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-numeric-separator": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@changesets/cli": "^2.6.2",
    "@manypkg/cli": "^0.11.1",
    "@types/babel__core": "^7.1.8",
    "@types/content-type": "^1.1.3",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.1.4",
    "@types/jest-when": "^2.7.0",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-eslint": "^10.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "core-js": "^3.6.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^26.6.3",
    "jest-enzyme": "^7.1.2",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  }
}
