{
  "name": "kerosene",
  "version": "1.0.0",
  "description": "A collection of useful modules",
  "main": "index.js",
  "repository": "git@github.com:KablamoOSS/kerosene.git",
  "author": "Kablamo",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prebuild": "yarn workspace @kablamo/kerosene run build",
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "test": "jest --expand --coverage",
    "test:coverage": "jest --coverage --coverageReporters=lcov --coverageDirectory=coverage",
    "watch": "jest --verbose=false --watch",
    "prettier:check": "prettier --check packages/**/*.ts packages/**/*.tsx",
    "lerna:publish": "lerna publish from-package --cd-version patch --no-git-tag-version --no-push --yes"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.5.5",
    "@betit/rollup-plugin-rename-extensions": "^0.0.5",
    "@types/content-type": "^1.1.3",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.18",
    "@types/jest-when": "^2.4.1",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "babel-plugin-lodash": "^3.3.4",
    "core-js": "^3.2.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.0",
    "jest-sandbox": "^1.1.2",
    "jest-when": "^2.6.2",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.20.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./testSetup.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
