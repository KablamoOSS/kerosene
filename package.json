{
  "name": "kerosene",
  "version": "1.0.0",
  "description": "A collection of useful modules",
  "main": "index.js",
  "repository": "https://github.com/KablamoOSS/kerosene",
  "author": "Kablamo",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "manypkg check",
    "prebuild": "yarn workspace @kablamo/kerosene run build",
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check packages/**/*.ts packages/**/*.tsx",
    "test": "jest --expand --coverage",
    "test:coverage": "jest --coverage --coverageReporters=lcov --coverageDirectory=coverage",
    "watch": "jest --verbose=false --watch",
    "release": "yarn build && changeset publish"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./testSetup.ts"
    ],
    "transform": {
      "^.+\\.(?:[jt]sx?)$": [
        "ts-jest",
        {
          "diagnostics": false,
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "<rootDir>/packages/**/*.(js|jsx|ts|tsx)",
      "!<rootDir>/packages/*/(.dist|es|lib)/**/*",
      "!**/*.(spec|test).*",
      "!**/babel.config.js",
      "!**/rollup.config.js",
      "!**/rollup-config.ts"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.22.6",
    "@babel/eslint-parser": "^7.22.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-numeric-separator": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.22.6",
    "@babel/preset-env": "^7.22.6",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@babel/register": "^7.21.0",
    "@changesets/cli": "^2.26.0",
    "@manypkg/cli": "^0.21.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/babel__core": "^7.20.0",
    "@types/content-type": "^1.1.5",
    "@types/jest": "^29.5.0",
    "@types/jest-when": "^3.5.2",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.16.19",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "babel-plugin-lodash": "^3.3.4",
    "core-js": "^3.31.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-node": "^0.3.8",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.1",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "jsdom": "^22.1.0",
    "jsdom-global": "^3.0.2",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2"
  }
}
