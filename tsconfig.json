{
  "compilerOptions": {
    "pretty": true,
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": [
    "**/packages/**/dist",
    "**/packages/**/es",
    "**/packages/**/lib",
    "**/node_modules"
  ]
}
